<style>

    .table .thead-dark th {
        color: #fff !important;
        background-color: #696969 !important;
        border-color: #ecf0f5 !important;
    }
    .table td{
        border:1px solid #696969 !important;
    }
    table>thead>tr>th {
        padding: 4px !important;
        background-color: #696969;
        color: white;
        font-size: 13px;
    }
</style>

<section class="content-header">
    <h1>
        Kitchen
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="top-box">
                <div class="col-md-2">
                    <div class="input-group">
                        <input class="form-control" placeholder="Search..." id="textinput" name="textinput"  type="text"
                               placeholder="Search Country" ng-model="kitchenSearchText"
                               ng-change="getPaginationList(kitchenSearchText)">

                    </div>
                </div>
                <div class="col-md-10">
                    <div class="top-button-area">
                        <div class="col-md-2 col-sm-4">
                            <button type="button" class="btn btn-block btn-success" ng-click="addNewKitchen()">Add</button>
                        </div>
                        <div class="col-md-2 col-sm-4">
                            <button type="button" class="btn btn-block btn-success" id="colButnw"  data-toggle="modal"
                                    ng-model="inactiveStatus" data-target=".print-me"
                                    ng-click="inactiveButton()">{{ButtonStatus}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12 col-xs-12 customer-data">
            <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead>
                <tr>
                    <th>
                        Kitchen
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>


                </thead>
                <tbody>
                <tr ng-repeat="kitchen in kitchenList| filter:kitchenSearchText">
                    <td>{{kitchen.kitchenName}}</td>
                    <td>{{kitchen.description}}</td>

                    <td><button type="button" class="btn btn-primary hi_btn"  ng-click="editKitchen(kitchen)">Edit</button></td>
                </tr>
                </tbody>
            </table>
            <div class="col-sm-12 pagination_">

                <div class="col-sm-12" style="float:right !important;">
                    <button type="button" class="btn btn-default hi_btn" ng-class="{'diabled-class': first}"
                            ng-disabled="first"
                            ng-click="getPaginationList('firstPage')" ng-model="first">First
                    </button>
                    <button type="button" class="btn btn-default hi_btn" ng-class="{'diabled-class': prev}"
                            ng-disabled="prev"
                            ng-click="getPaginationList('prevPage')" ng-model="prev">Prev
                    </button>
                    <button type="button" class="btn btn-default hi_btn" name="next" ng-disabled="next"
                            ng-click="getPaginationList('nextPage')" value="next"
                            ng-class="{'diabled-class': next}" ng-model="next">Next
                    </button>
                    <button type="button" class="btn btn-default hi_btn"
                            ng-click="getPaginationList('lastPage')" ng-class="{'diabled-class': last}"
                            ng-disabled="last"
                            ng-model="last">Last
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="add_new_kitchen_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 id="kitchen-title">Add Kitchen Details</h4>
            </div>
            <div class="modal-body">
                <div class="box-body">
                    <div class="row" id="cus_step1">

                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Name</label>
                            <div class="col-sm-9">
                                <input id="KitchenNameText" name="KitchenNameText"
                                       ng-pattern="/[aA-zZ\s]$/"
                                       type="text" placeholder="Kitchen Name"
                                       ng-model="KitchenNameText" maxlength="125"
                                       class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Description</label>
                            <div class="col-sm-9">
                                <textarea id="description" name="description"
                                       ng-pattern="/[aA-zZ\s]$/"
                                       type="text" placeholder="description"
                                       ng-model="description" maxlength="125"
                                       class="form-control">
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Status</label>
                            <div class="col-sm-9">
                                <select name="custStatus" id="custStatus" ng-model="StatusText" class="form-control" required>
                                    <option value="Active">Active</option>
                                    <option value="InActive">InActive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-toggle="modal" ng-disabled="isDisabled"
                        data-target=".print-me" ng-click="saveKitchen('add_new_kitchen_modal')">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="removeKitchenDetails()">Close</button>

            </div>
        </div>
    </div>
</div>

